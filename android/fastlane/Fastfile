# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    gradle(task: "clean assembleRelease")
    crashlytics
  
    # sh "your_script.sh"
    # You can also use other beta testing services here
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "clean assembleRelease")
    upload_to_play_store
  end

  desc "Build Debug locally"
  lane :build_debug do
    gradle(task: "clean assembleDebug")
  end

  desc "Build Release locally"
  lane :build_release do
    gradle(task: "clean assembleRelease")
  end

  desc "Deliver Release to Firebase App Distribution"
  lane :deliver_release_to_app_distribution do
    gradle(task: "clean assembleRelease")
    firebase_app_distribution(
      app: "1:950714050129:android:fc78ffe99f2037c4853a70",
      # service_credentials_file: "explore-fastlane-service-account-app-distribution-admin-key.json",
      firebase_cli_token: "1//03xZPe0i87cU0CgYIARAAGAMSNwF-L9Ird01DLnDBelCu6hh90pqAPYMiRtc-EaByYTJYHHyDLwDYDLC_62oeYW1bmbuFbxYpvU4",
      groups: "testers",
    )
  end
end
